@model ProductDto

@{
    ViewData["Title"] = "Edit Product";
}


<div class="p-5 mb-5">
    <h2 class="mb-5">@ViewData["Title"]</h2>
    <h4>Product</h4>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form method="post" asp-action="Edit" enctype="multipart/form-data" >
                <div>
                    Product ID : @ViewData["ProductId"]
                </div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div>
                    <img src="/images/products/@ViewData["ProductImage"]" alt="Product Image" width="100">
                </div>

                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-3">
                    <a class="btn btn-success" asp-action="Index" asp-controller="Products" >Cancel</a>
                    <input type="submit" value="Edit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

